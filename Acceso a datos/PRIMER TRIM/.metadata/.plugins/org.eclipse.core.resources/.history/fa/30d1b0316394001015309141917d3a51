package tarea;

public class Pokemon {
	String nombre;
	String tipo;
	int peso;

	public Pokemon(String nombre, String tipo, int peso) {
		this.nombre = nombre;
		this.tipo = tipo;
		this.peso = peso;
	}
	
	public void mostrarInfo() {
		System.out.println("Nombre: "+ nombre+ ", tipo: "+ tipo + " y peso: " + peso + ".");
	}
}
